<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ibProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jules"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBody" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername"
        android:layout_toEndOf="@+id/ibProfileImage"
        android:text="sample tweet blah blah"
        android:layout_marginLeft="5dp"
        />


    <TextView
        android:id="@+id/tvRelativeTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="20m" />

    <TextView
        android:id="@+id/tvHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jchavandoo"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvUsername"
        android:layout_marginStart="12dp" />


    <ImageButton
        android:id="@+id/ibReply"
        app:srcCompat="@drawable/reply_outline"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/tvBody"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/transparent_white"
        android:tint="@color/transparent_white" />


    <ImageButton
        android:id="@+id/ibRetweet"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/tvBody"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/retweet_pics"
        android:background="@color/transparent_white"
        android:tint="@color/transparent_white" />

    <TextView
        android:id="@+id/tvRetweetCount"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ibRetweet"
        android:layout_toEndOf="@+id/ibRetweet"
        android:text="200"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/ibFavorites"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/tvBody"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/favorite_pics"
        android:background="@color/transparent_white"
        android:tint="@color/transparent_white"
        />

    <TextView
        android:id="@+id/tvFavoriteCount"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ibFavorites"
        android:layout_toEndOf="@+id/ibFavorites"
        android:text="200"
        android:textSize="14sp"
        android:background="@color/transparent_white"
        />


